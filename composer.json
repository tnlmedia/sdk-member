{
    "name": "tnlmedia/member-sdk",
    "description": "Member PHP SDK",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "TNL Media Group",
            "email": "to.it@tnlmedia.com"
        }
    ],
    "require": {
        "php": "^7.0",
        "guzzlehttp/guzzle": "^7.3",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0",
        "fzaninotto/faker": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "TNLMedia\\MemberSDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TNLMedia\\MemberSDK\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "TNLMedia\\MemberSDK\\Laravel\\MemberSDKServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    }
}
